
@{
    ViewBag.Title = "FAQ";
    Layout = "~/Views/Shared/_Student.cshtml";
}

<h2>FAQ</h2>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">

            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <p>This section is for Concern and Question gathering in order to help the students regarding subject matters and to answer their concerns. </p>
                    <p>If you have questions, just click the button below</p>

                    <button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModalQuestion">
                        Ask a Question
                    </button>

                    @*modal for question*@
                    <div id="myModalQuestion" class="modal fade" role="dialog">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">

                                    <h4 class="modal-title">Ask a Question</h4>
                                </div>
                                <div class="modal-body">
                                    <form class="form-horizontal" method="POST" id="Question" action="/Student/getConcern">

                                        <div class="form-group">
                                            <label>Student Number</label>
                                            <input type="text" id="Studentnum" name="Studentnum" class="form-control" value="@Session["Username"].ToString()" />
                                        </div>

                                        <div class="form-group">
                                            <label>Email</label>
                                            <input type="text" id="Email" name="Email" class="form-control" value="@Session["Email"].ToString()" />
                                        </div>

                                        <div class="form-group">
                                            <label>Subject</label>
                                            <input type="text" id="Subject" name="Subject" class="form-control" />
                                        </div>

                                        <div class="form-group">
                                            <label>Content</label>
                                            <textarea id="Content" name="Content" rows="3" class="form-control"></textarea>
                                        </div>

                                        <div class="form-group">

                                            <input type="hidden" id="Status" name="Status" value="Pending" class="form-control" />
                                        </div>

                                        <button type="submit" id="Send" class="btn btn-success">Send</button>
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>

<script src="../../Scripts/getInquiry.js"></script>
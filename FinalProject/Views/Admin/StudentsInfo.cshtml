
@{
    ViewBag.Title = "StudentsInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Students Information</h2>



<div>
    <div class="row">
        <div class="col-3">
            <button class="btn btn-primary" id="btnSearch"> SEARCH</button>
        </div>
        <div col="2">
            <select class="form-control" id="category">
                <option value=""></option>
                <option value="First Name">First Name</option>
                <option value="Last Name">Last Name</option>
                <option value="Email">Email</option>
            </select>
        </div>
        <div class="col-3">
            <input type="text" id="keyword" class="form-control" />
        </div>
    </div>
</div>
<br />
<table class="table table-striped table-bordered table-hover" id="example">
</table>
<button type="button" class="btn btn-secondary" id="AddStudent">
    Add Student
</button>

<button type="button" class="btn btn-primary" id="showList">
    Student List
</button>


<div class="modal fade" id="exampleModal2" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-width" role="document">
        <div class="modal-content modal-content-height">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="modalPersonID" />

                <iframe id="crystalReport">
                </iframe>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Student Info</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-4 col-sm-3">
                        <label class="font-weight-bold" for="lastName">Last Name: </label>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <span name="Lastname" id="modalLastname"></span> <br />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 col-sm-3">
                        <label class="font-weight-bold" for="firstname">First Name: </label>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <span name="Firstname" id="modalFirstName"></span><br />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 col-sm-3">
                        <label class="font-weight-bold" for="middleName">Middle Name: </label>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <span name="Middlename" id="modalMiddlename"></span><br />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 col-sm-3">
                        <label class="font-weight-bold" for="sex">Sex</label>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <span name="Sex: " id="modalSex"></span> <br />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 col-sm-3">
                        <label class="font-weight-bold" for="contactNumber">Contact : </label>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <span name="Contact_number" id="modalContact_number"></span> <br />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 col-sm-3">
                        <label class="font-weight-bold" for="Birthday">BirthDay: </label>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <span name="DOB" id="modalDOB"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 col-sm-3">
                        <label class="font-weight-bold" for="age">Age: </label>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <span name="Age" id="modalAge"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 col-sm-3">
                        <label class="font-weight-bold" for="email"> Email: </label>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <span name="Email" id="modalEmail"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 col-sm-3">
                        <label class="font-weight-bold" for="address">Address: </label>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <span name="Address" id="modalAddress"></span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="editData">Edit</button>
                <button type="button" class="btn btn-danger" id="deleteData">Delete</button>
            </div>
        </div>
    </div>
</div>



<div class="modal fade" id="exampleModalEdit" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">

            <form action="/Home/EditRow" id="editInfo" method="post">

                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Student Info</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>

                    </button>
                </div>
                <div class="modal-body">
                    <input class="form-control" id="modalStudentId1" name="StudentId" style="display:none" type="text">

                    <label class="font-weight-bold" for="lastName">Last Name: </label>
                    <input class="form-control" id="modalLastname1" name="Lastname" type="text">


                    <label class="font-weight-bold" for="firstname">First Name: </label>
                    <input class="form-control" id="modalFirstName1" name="Firstname" type="text">

                    <label class="font-weight-bold" for="middleName">Middle Name: </label>
                    <input class="form-control" id="modalMiddlename1" name="Middlename" type="text">


                    <label class="font-weight-bold" for="contactNumber">Contact Number: </label>
                    <input class="form-control" id="modalContact_number1" name="Contact_number" type="text">

                    <label class="font-weight-bold" for="Birthday">BirthDay: </label>
                    <input class="form-control" id="modalDOB1" name="DOB" type="date">

                    <label class="font-weight-bold" for="age">Age: </label>
                    <input class="form-control" id="modalAge1" name="Age" type="text">

                    <label class="font-weight-bold" for="email"> Email: </label>
                    <input class="form-control" id="modalEmail1" name="Email" type="text">

                    <label class="font-weight-bold" for="address">Address: </label>
                    <input class="form-control" id="modalAddress1" name="Address" type="text">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" id="registerBtn" class="btn btn-success">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="ModalAddStudent" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">

            <form action="/Admin/DataTransfer" id="registrationForm" method="post">

                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Student Info</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>

                    </button>
                </div>
                <div class="modal-body">
                    <input class="form-control" id="StudentId" name="StudentId" style="display:none" type="text">

                    <label class="font-weight-bold" for="lastName">Last Name: </label>
                    <input class="form-control" id="Lastname" name="Lastname" type="text">


                    <label class="font-weight-bold" for="firstname">First Name: </label>
                    <input class="form-control" id="Firstname" name="Firstname" type="text">

                    <label class="font-weight-bold" for="middleName">Middle Name: </label>
                    <input class="form-control" id="Middlename" name="Middlename" type="text">

                    <label class="font-weight-bold" for="Sex">Sex: </label>
                    <select name="Sex" class="form-control">
                        <option value=" "> </option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>

                    <label class="font-weight-bold" for="Birthday">BirthDay: </label>
                    <input class="form-control" id="DOB" name="DOB" type="date">

                    <label class="font-weight-bold" for="contactNumber">Contact Number: </label>
                    <input class="form-control" id="Contact_number" name="Contact_number" onkeyup="numberCheck(this)" type="text" maxlength="11" min="8">

                    <label class="font-weight-bold" for="email"> Email: </label>
                    <input class="form-control" id="Email" name="Email" type="text">

                    <label class="font-weight-bold" for="address">Address: </label>
                    <input class="form-control" id="Address" name="Address" type="text">

                    <label class="font-weight-bold" for="studentum">Student Number: </label>
                    <input class="form-control" id="Studentnum" name="Studentnum" type="text">

                    <label class="font-weight-bold" for="password">Password: </label>
                    <input class="form-control" id="Password" name="Password" type="password">

                    <label class="font-weight-bold" for="password2">Confirm Password: </label>
                    <input class="form-control" id="ConfirmPassword" name="ConfirmPassword" type="password">

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" id="AddStudentBtn" class="btn btn-success">Add</button>
                    </div>
</form>
        </div>
    </div>
</div>
@Scripts.Render("~/bundles/DataTables")
@Scripts.Render("~/Scripts/Registration")


@{
    ViewBag.Title = "Grades";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Grades</h2>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                List of Students
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="tblgrades">
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script href="https://code.jquery.com/jquery-3.5.1.js"></script>

<script type="text/javascript">

    $(function () {
        $('#tblgrades').DataTable({
            paging: true,
            searching: true,
            destroy: true,
            lengthMenu: [[10, 20, 30, -1], [10, 20, "All"]],
            ajax: {
                url: "../Admin/StudentGrades",
                type: "POST",
                data: function (d) {
                }
            },
            columns: [{ 'data': 'id', title: "id", visible: false },
            { 'data': 'Studentnum', title: "Student Number" },
            { 'data': 'LastName', title: "Lastname" },
            { 'data': 'FirstName', title: "Firstname" },
            { 'data': 'Year', title: "Year" },
            { 'data': 'Section', title: "Section" },
            { 'data': 'Code', title: "Subj_Code" },
            { 'data': 'Subject', title: "Subject" },
            { 'data': 'Unit', title: "Unit" },
            { 'data': 'Grade', title: "Grade" }]
            
        });

    });</script>
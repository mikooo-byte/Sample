
@{
    ViewBag.Title = "PasswordReset";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Request for Password Reset</h2>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                List of Questions and Concerns
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="tblreset">
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<div id="generatecodeModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">

                <h4 class="modal-title">Generate Password Reset Code</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form action="/Admin/getCode" method="post" class="form-horizontal" id="Generateform">
                    <div class="form-group">
                        @*<label>Name</label>*@
                        <input type="text" name="Username" id="StudentnumModal" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Password Reset Code</label>
                        <input type="text" name="Code" id="CodeModal" class="form-control" />
                    </div>

                    <input type="submit" class="btn btn-primary" onclick="GenerateCode()" value="Generate Code">
                    <button type="button" class="btn btn-secondary" id="editStatus" data-dismiss="modal" data-toggle="modal" data-target="#updstatusModal">Edit</button>
                    <button type="button" class="btn btn-primary" id="Send" data-dismiss="modal" data-toggle="modal" data-target="#SendRequestModal">Send Password Reset Code</button>
                </form>
            </div>
        </div>
    </div>
</div>




<div id="SendRequestModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Send Password Reset Code</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form action="/Admin/StudentsInquiry" method="post" class="form-horizontal" id="Replyform">
                    <div class="form-group">
                        @*<label>Name</label>*@
                        <input type="hidden" name="Name" class="form-control" value="Administrator" />
                    </div>
                    <div class="form-group">
                        <label>Receiver</label>
                        <input type="text" id="Emailmodal2" name="Receiver" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Subject</label>
                        <input type="text" id="modalSubject" name="Subject" class="form-control" value="Password Reset" />
                    </div>

                    <div class="form-group">
                        <label>Reply</label>
                        <textarea name="Message" id="messageModal" rows="3" class="form-control"></textarea>
                    </div>

                    <input type="submit" class="btn btn-success" value="Send">

                </form>
            </div>
        </div>
    </div>
</div>

<div id="updstatusModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">

                <h4 class="modal-title">Update Request Status</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form action="/Admin/UpdReqStatus" method="post" class="form-horizontal" id="UpdStatusform">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4 col-sm-3">
                                <label class="font-weight-bold" for="Status">Change Status: </label>
                            </div>
                            <div col="2">
                                <input type="hidden" name="Username" id="Studentnummodal" class="form-control" />
                                <select class="form-control" id="Statusmodal" name="Status">
                                    <option value=""></option>
                                    <option value="On Process">On Process</option>
                                    <option value="Pending">Pending</option>
                                    <option value="Closed">Closed</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <input type="submit" class="btn btn-success" value="SAVE">

                </form>
            </div>
        </div>
    </div>
</div>

<script src="../../Scripts/getInquiry.js"></script>

<script>

    function GenerateCode() {
        var x = Math.floor((Math.random() * 100000000) + 1);
        document.getElementById("CodeModal").value = x;

    }

</script>
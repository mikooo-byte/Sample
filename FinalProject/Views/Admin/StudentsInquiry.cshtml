
@{
    ViewBag.Title = "StudentsInquiry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Students Inquiry</h2>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                List of Questions and Concerns
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="tblquestions">
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Inquiry Info</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-4 col-sm-3">
                        <label class="font-weight-bold" for="Studentnum">Studentnum: </label>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <span name="Studentnum" id="modalStudentnum"></span> <br />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 col-sm-3">
                        <label class="font-weight-bold" for="Email">Email: </label>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <span name="Email" id="modalEmail"></span><br />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 col-sm-3">
                        <label class="font-weight-bold" for="Subject">Subject: </label>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <span name="Subject" id="modalSubject"></span><br />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 col-sm-3">
                        <label class="font-weight-bold" for="Content">Content : </label>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <span name="Content" id="modalContent"></span> <br />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 col-sm-3">
                        <label class="font-weight-bold" for="Status">Status: </label>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <span name="Status" id="modalStatus"></span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="editData">Edit</button>
                <button type="button" class="btn btn-danger" id="deleteData">Delete</button>
            </div>
        </div>
    </div>
</div>


<script src="../../Scripts/getInquiry.js"></script>